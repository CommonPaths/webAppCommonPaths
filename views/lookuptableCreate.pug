extends layout

block content

    .topnav
        ul.breadcrumb
            li
                a(href='/settings') Settings
                    i.fa.fa-caret-right(aria-hidden='true')
            li 
                a(href='/lookuptables/list') Lookup List
                    i.fa.fa-caret-right(aria-hidden='true')
            li Add new value to lookup table
        .gradient
            .username.userright #{user.username} 
                i.fa.fa-user-circle(aria-hidden='true').usernameicon
        

    .formcontainer
        form#Form(method='POST' action='')
            .form-row    
                .form-group.col-md-4.margin
                    label.control-label(for='conditions') Eligibility Condition Code: 
                    input#conditions.form-control.form-control-md(type='text' placeholder='enter condition code' name='conditions'  value='') 
                .form-group.col-md-4
                    label.control-label(for='conditionsDesc') Condition Code Desc: 
                    input#conditions.form-control.form-control-md(type='text' placeholder='enter condition code description' name='conditionsDesc' value='')             

                .form-group.col-md-4.margin
                    label.control-label(for='mobAids') Mobilitiy Aid Code: 
                    input#mobAids.form-control.form-control-md(type='text' placeholder='enter mobAids' name='mobAids'  value='')
                .form-group.col-md-4
                    label.control-label(for='mobAidsDesc') Mobility Aid Desc:
                    input#mobAidsDesc.form-control.form-control-md(type='text' placeholder='enter mobAidsDesc' name='mobAidsDesc' value='')
                .form-group.col-md-4.margin
                    label.control-label(for='prefSpaceType') Pref Space Type Code:
                    input#prefSpaceType.form-control.form-control-md(type='text' placeholder='enter prefSpaceType' name='prefSpaceType'  value='')
                .form-group.col-md-4.margin
                    label.control-label(for='prefSpaceTypeDesc') Pref Space Type Desc:
                    input#prefSpaceTypeDesc.form-control.form-control-md(type='text' placeholder='enter prefSpaceTypeDesc' name='prefSpaceTypeDesc' value='')
                    p
                .formfooter.col-md-12
                    input.primarybutton.submit(type='submit' value='Create')
                    input.secondarybutton.submit(type='button' value='Cancel' onclick="location.href='/lookuptables/list';")

    if s_status == 'Record saved'
        .alert.alert-success.alert-dismissable.fade.show(role='alert')
            .popupalerts
                button.close(type='button' data-dismiss='alert')
                    span(aria-hidden='true') &times;
                .notificationicon
                    iconify-icon(data-icon='teenyicons:tick-circle-outline')
                h2.alert-heading Success! 
                p                    
                .alert-body
                    | Value Added! 
                p                 
                .alert-footer
                    button.neu.popupbtn(type='button' onclick="location.href='/lookuptables/create';") Add new code

    
    if s_status == 'Record already exists'
        .alert.alert-danger.alert-dismissable.fade.show(role='alert')
            .popupalerts
                button.close(type='button' data-dismiss='alert')
                    span(aria-hidden='true') &times;
                .warningicon
                    iconify-icon(data-icon='carbon:warning-square')
                h2.alert-heading Value already exists!
                p
                .alert-body
                    | Create another record!
                p
                .alert-footer
                    button.neu.popupbtn(type='button' onclick="location.href='/lookuptables/create';") Add new code
                         

    if errors 
        ul
            for error in errors
                li!= error.msg
